{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "A representation of a calendar system",
	"type": "object",
	"properties": {
		"formats": { "$ref": "#/definitions/formats" },
		"calendar": { "$ref": "#/definitions/calendar" },
		"periods": {
			"type": "array",
			"items": [
				{ "$ref": "#/definitions/period" }
			]
		},
		"yearNames": { "$ref": "#/definitions/yearNames" },
		"moons": {
			"type": "array",
			"items": [
				{ "$ref": "#/definitions/moon" }
			]
		}
	},
	"additionalProperties": false,
	"required": [
		"calendar"
	],

	"definitions": {

		"formats": {
			"type": "object",
			"properties": {
				"LT": {
					"type": "string"
				},
				"LTS": {
					"type": "string"
				},
				"L": {
					"type": "string"
				},
				"l": {
					"type": "string"
				},
				"LL": {
					"type": "string"
				},
				"ll": {
					"type": "string"
				},
				"LLL": {
					"type": "string"
				},
				"lll": {
					"type": "string"
				},
				"LLLL": {
					"type": "string"
				},
				"llll": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},

		"calendar": {
			"type": "object",
			"properties": {
				"year": { "$ref": "#/definitions/calendarYear" },
				"week": { "$ref": "#/definitions/calendarWeek" },
				"time": { "$ref": "#/definitions/calendarTime" },
				"timestampOffset": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 0
				}
			},
			"additionalProperties": false,
			"required": [
				"year",
				"week"
			]
		},

		"calendarYear": {
			"type": "object",
			"properties": {
				"leapYearFrequency": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 0
				},
				"leapYearStart": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 1
				},
				"months": {
					"type": "array",
					"items": [
						{ "$ref": "#/definitions/calendarMonth" }
					]
				}
			},
			"additionalProperties": false,
			"required": [
				"months"
			]
		},

		"calendarMonth": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1
				},
				"abbr": {
					"type": "string",
					"minLength": 1
				},
				"long": {
					"type": "string",
					"minLength": 1
				},
				"days": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 0
				},
				"daysInLeapYear": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 0
				}
			},
			"additionalProperties": false,
			"required": [
				"name",
				"days"
			]
		},

		"calendarWeek": {
			"type": "object",
			"properties": {
				"offset": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 0
				},
				"days": {
					"type": "array",
					"items": [
						{ "$ref": "#/definitions/calendarWeekDay" }
					]
				}
			},
			"additionalProperties": false,
			"required": [
				"days"
			]
		},

		"calendarWeekDay": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1
				},
				"abbr": {
					"type": "string",
					"minLength": 1
				},
				"long": {
					"type": "string",
					"minLength": 1
				}
			},
			"additionalProperties": false,
			"required": [
				"name"
			]
		},

		"calendarTime": {
			"type": "object",
			"properties": {
				"hoursInDay": {
					"type": "integer",
					"multipleOf": 1,
					"exclusiveMinimum": 0
				},
				"minutesInHour": {
					"type": "integer",
					"multipleOf": 1,
					"exclusiveMinimum": 0
				},
				"secondsInMinute": {
					"type": "integer",
					"multipleOf": 1,
					"exclusiveMinimum": 0
				},
				"anteMeridiemLabel": {
					"type": "string",
					"minLength": 1
				},
				"postMeridiemLabel": {
					"type": "string",
					"minLength": 1
				},
				"sunriseHour": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 0
				},
				"sunsetHour": {
					"type": "integer",
					"multipleOf": 1,
					"minimum": 0
				}
			},
			"additionalProperties": false
		},

		"period": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1
				},
				"abbr": {
					"type": "string",
					"minLength": 1
				},
				"long": {
					"type": "string",
					"minLength": 1
				},
				"startYear": {
					"type": "integer",
					"multipleOf": 1
				},
				"endYear": {
					"type": "integer",
					"multipleOf": 1
				}
			},
			"additionalProperties": false,
			"required": [
				"name"
			]
		},

		"yearNames": {
			"type": "object",
			"patternProperties": {
				"^-?\\d+$": {
					"type": "string",
					"minLength": 1
				}
			},
			"additionalProperties": false
		},

		"moon": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"minLength": 1
				},
				"abbr": {
					"type": "string",
					"minLength": 1
				},
				"long": {
					"type": "string",
					"minLength": 1
				},
				"secondsInCycle": {
					"type": "integer",
					"multipleOf": 1
				},
				"phases": {
					"type": "array",
					"minItems": 1,
					"items": [
						{
							"type": "string",
							"minLength": 1
						}
					]
				}
			},
			"additionalProperties": false,
			"required": [
				"name",
				"secondsInCycle"
			]
		}

	}
}
